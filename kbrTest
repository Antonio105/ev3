global key
InitKeyboard();

while 1
    pause(0.1);
    switch key
        case 'a'
            brick.MoveMotor('A',50);
            pause(1);
            brick.StopMotor('A');
        case 'b'
            brick.MoveMotor('B',100);
            pause(1);
            brick.StopMotor('B');
        case 'q'
            break;
    end
    
end
CloseKeyboard();
